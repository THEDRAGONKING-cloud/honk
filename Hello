<body>

<!-- ðŸ” Login Screen -->
<div id="login-container">
    <h2>Login to The Black Den</h2>
    <input type="text" id="username" placeholder="Username">
    <input type="password" id="password" placeholder="Password">
    <button onclick="checkLogin()">Login</button>
    <p id="login-message"></p>
</div>

<!-- ðŸŒ Main Website Content -->
<div id="main-content">
    <h1 class="header">The Black Den</h1>
    <div class="tab1" onclick="openCustomTab('Action')">Action</div>
    <div class="tab1" onclick="openCustomTab('Skill')">Skill</div>
    <div class="tab1" onclick="openCustomTab('Logic')">Logic</div>
    <div class="tab1 admin-tab" id="admin-tab" onclick="openAdminPanel()" style="display:none;">Admin Panel</div>
    <button id="logout-button" onclick="logout()" style="display:none;">Logout</button>
</div>

<!-- âš™ï¸ Admin Panel Content -->
<div id="admin-panel">
    <h2 style="color:white;">Admin Panel</h2>

    <!-- Add Account Form -->
    <div style="margin-bottom: 20px; padding: 15px; background-color: #222; border-radius: 5px;">
        <h3 style="margin-top: 0;">Add New Account</h3>
        <input type="text" id="new-username" placeholder="New Username" style="margin-right: 10px;">
        <input type="password" id="new-password" placeholder="New Password" style="margin-right: 10px;">
        <!-- New checkbox for isAdmin -->
        <label for="new-is-admin" style="color: white;">Is Admin:</label>
        <input type="checkbox" id="new-is-admin" style="margin-right: 10px;">
        <button onclick="addAccount()">Add Account</button>
    </div>

    <ul id="user-management-list" class="user-list">
        <!-- User items will be generated here by JavaScript -->
    </ul>
    <button onclick="closeAdminPanel()">Close Admin Panel</button>
</div>

<script>
    // âœ… Generates a unique ID for device fingerprinting
    function generateDeviceId() {
        return 'device-' + Math.random().toString(36).substr(2, 9);
    }

    // âœ… Default users with deviceId and isSuspended properties
    const defaultUsers = [
        { username: "user123", password: "lemonade", isSuspended: false, deviceId: null, isAdmin: false },
        { username: "THEAdmin", password: "pass", isSuspended: false, deviceId: null, isAdmin: true },
        { username: "player1", password: "gamer123", isSuspended: false, deviceId: null, isAdmin: false }
    ];

    let users = loadUsersFromLocalStorage();
    let currentUser = null;

    function loadUsersFromLocalStorage() {
        const storedUsers = localStorage.getItem('appUsers');
        return storedUsers ? JSON.parse(storedUsers) : defaultUsers;
    }

    function saveUsersToLocalStorage() {
        localStorage.setItem('appUsers', JSON.stringify(users));
    }

    // âœ… Login check with device binding logic
    function checkLogin() {
        const userInput = document.getElementById("username").value.trim();
        const passInput = document.getElementById("password").value.trim();
        const message = document.getElementById("login-message");

        const user = users.find(u => u.username === userInput && u.password === passInput);

        if (user) {
            if (user.isSuspended) {
                message.textContent = "Your account has been temporarily suspended.";
                return;
            }

            // Check if device is linked and if it matches
            let currentDeviceId = localStorage.getItem(`device-${user.username}`);

            if (user.deviceId) {
                // If a device ID is already linked
                if (user.deviceId !== currentDeviceId) {
                    // Mismatch: Suspend the account
                    user.isSuspended = true;
                    saveUsersToLocalStorage();
                    message.textContent = "Security Alert: This account has been suspended due to an unauthorized login attempt from a new device.";
                    return;
                }
            } else {
                // First login: Link this device
                if (!currentDeviceId) {
                    currentDeviceId = generateDeviceId();
                    localStorage.setItem(`device-${user.username}`, currentDeviceId);
                }
                user.deviceId = currentDeviceId;
                saveUsersToLocalStorage();
            }
            
            // Successful login
            currentUser = user;
            document.getElementById("login-container").style.display = "none";
            document.getElementById("main-content").style.display = "block";
            document.getElementById("logout-button").style.display = "block";
            if (currentUser.isAdmin) {
                document.getElementById("admin-tab").style.display = "inline-block";
            }
        } else {
            message.textContent = "Invalid username or password.";
        }
    }

    // âœ… Logout function
    function logout() {
        currentUser = null;
        document.getElementById("main-content").style.display = "none";
        document.getElementById("admin-panel").style.display = "none";
        document.getElementById("login-container").style.display = "flex";
        document.getElementById("logout-button").style.display = "none";
        document.getElementById("admin-tab").style.display = "none";
        document.getElementById("login-message").textContent = ""; // Clear any previous message
        document.getElementById("username").value = ""; // Clear username field
        document.getElementById("password").value = ""; // Clear password field
    }

    // âœ… Opens the admin panel and populates the list
    function openAdminPanel() {
        if (currentUser && currentUser.isAdmin) {
            document.getElementById("main-content").style.display = "none";
            document.getElementById("admin-panel").style.display = "block";
            renderUserList();
        }
    }

    // âœ… Closes the admin panel and returns to main content
    function closeAdminPanel() {
        document.getElementById("admin-panel").style.display = "none";
        document.getElementById("main-content").style.display = "block";
    }

    // âœ… Renders the list of users in the admin panel
    function renderUserList() {
        const userList = document.getElementById("user-management-list");
        userList.innerHTML = "";
        users.forEach((user, index) => {
            const userItem = document.createElement("li");
            userItem.className = "user-item";
            userItem.innerHTML = `
                <div class="account-info">
                    <span>Username: <input type="text" id="username-${index}" value="${user.username}"></span>
                    <span>Password: <input type="text" id="password-${index}" value="${user.password}"></span>
                    <span>
                        <label for="is-admin-${index}">Admin:</label>
                        <input type="checkbox" id="is-admin-${index}" ${user.isAdmin ? 'checked' : ''} ${user.username === currentUser.username ? 'disabled' : ''}>
                    </span>
                    <span>Suspended: <input type="checkbox" id="suspended-${index}" ${user.isSuspended ? 'checked' : ''}></span>
                </div>
                <div class="account-controls">
                    <button class="update" onclick="updateAccount(${index})">Update</button>
                    <button class="delete" onclick="deleteAccount(${index})">Delete</button>
                </div>
            `;
            userList.appendChild(userItem);
        });
    }

    // âœ… Adds a new account from the admin panel
    function addAccount() {
        const newUsername = document.getElementById("new-username").value.trim();
        const newPassword = document.getElementById("new-password").value.trim();
        const newIsAdmin = document.getElementById("new-is-admin").checked;

        if (newUsername && newPassword) {
            if (users.find(u => u.username === newUsername)) {
                alert("Account with this username already exists!");
                return;
            }

            const newUser = {
                username: newUsername,
                password: newPassword,
                isSuspended: false,
                deviceId: null,
                isAdmin: newIsAdmin
            };
            users.push(newUser);
            saveUsersToLocalStorage();
            renderUserList();
            document.getElementById("new-username").value = "";
            document.getElementById("new-password").value = "";
            document.getElementById("new-is-admin").checked = false;
        } else {
            alert("Please enter a username and password.");
        }
    }

    // âœ… Updates an existing account
    function updateAccount(index) {
        const usernameInput = document.getElementById(`username-${index}`);
        const passwordInput = document.getElementById(`password-${index}`);
        const suspendedInput = document.getElementById(`suspended-${index}`);
        const isAdminInput = document.getElementById(`is-admin-${index}`);

        if (usernameInput.value.trim() === "" || passwordInput.value.trim() === "") {
            alert("Username and password cannot be empty.");
            return;
        }

        users[index].username = usernameInput.value;
        users[index].password = passwordInput.value;
        users[index].isSuspended = suspendedInput.checked;
        if (!isAdminInput.disabled) {
            users[index].isAdmin = isAdminInput.checked;
        }
        
        saveUsersToLocalStorage();
        renderUserList();
    }

    // âœ… Deletes an account
    function deleteAccount(index) {
        if (confirm(`Are you sure you want to delete the account "${users[index].username}"?`)) {
            users.splice(index, 1);
            saveUsersToLocalStorage();
            renderUserList();
        }
    }

    // A placeholder for the tab content.
    function openCustomTab(tabName) {
        alert("Navigating to " + tabName + " section.");
    }
</script>

</body>
</html>
